@page
@using HamechiTamoom.Core.Convertors
@model HamechiTamoom.Web.Pages.Admin.ManageCourses.IndexModel
@{
    ViewData["Title"] = "لیست دوره ها";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">لیست دوره ها</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="row">
    <div class="col-md-12">
        <a asp-page="CreateCourse" class="btn btn-outline btn-success">افزودن دوره جدید</a>
    </div>
</div>
<br />
<div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            لیست دوره های سایت
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <div class="table-responsive">
                <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                    <div class="row">
                        <form>
                            <div class="col-md-10 col-sm-5">
                                <input type="text" name="filterCourseTitle" class="form-control" placeholder="جستجو بر اساس عنوان دوره" />
                            </div>
                            <div class="col-md-2 col-sm-2">
                                <button type="submit" class="btn btn-info form-control">بیاب</button>
                            </div>
                        </form>
                    </div>
                    <br />
                    <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                        <thead>
                            <tr>
                                <th>عنوان دوره</th>
                                <th>تعداد اپیزودها</th>
                                <th>تاریخ شروع</th>
                                <th>قیمت دوره</th>
                                <th>تصویر</th>
                                <th>دستورات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.ShowCourseForAdminViewModel.Courses)
                            {
                                <tr>
                                    <td>@item.CourseTitle</td>
                                    <td>@Model.ShowCourseForAdminViewModel.EpisodeCount</td>
                                    <td>@item.CreateDate.ToShamsi()</td>
                                    <td>@item.CoursePrice</td>
                                    <td>
                                        <img src="/img/Course/thumb/@item.CourseImageName" class="img-thumbnail littleimage" />
                                    </td>
                                    <td>
                                        <a asp-page="EditCourse" asp-route-userId="@item.CourseId" class="btn btn-outline btn-primary btn-sm">ویرایش</a>
                                        <a asp-page="DeleteCourse" asp-route-userId="@item.CourseId" class="btn btn-outline btn-danger btn-sm">حذف</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="dataTables_paginate paging_simple_numbers" id="dataTables-example_paginate">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.table-responsive -->
        </div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
</div>
