@page
@model HamechiTamoom.Web.Pages.Admin.ManageCourses.Episodes.IndexEpisodeModel
@{
    ViewData["Title"] = "لیست اپیزود ها";
}

<div class="row">
    <div class="col-lg-10">
        <h1 class="page-header">لیست اپیزود ها</h1>
    </div>
    <div class="col-lg-2">
        <a href="/Admin/ManageCourses" class="btn btn-outline btn-primary">لیست دوره ها</a>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="row">
    <div class="col-md-12">
        <a asp-page="CreateEpisode" asp-route-courseId="@ViewData["CourseId"].ToString()" class="btn btn-outline btn-success">افزودن اپیزود جدید</a>
    </div>
</div>
<br />
<div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            لیست دوره های سایت
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <div class="table-responsive">
                <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                    <br />
                    <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                        <thead>
                            <tr>
                                <th>عنوان اپیزود</th>
                                <th>مدت زمان</th>
                                <th>دسترسی</th>
                                <th>دستورات</th>
                            </tr>
                        </thead>
                        <tbody>
                        @foreach (var item in Model.CourseEpisodesList)
                        {
                            <tr>
                                <td>@item.EpisodeTitle</td>
                                <td>@item.EpisodeTime</td>
                                <td>
                                    @if (item.IsFree)
                                    {
                                        <p class="text-success">رایگان</p>
                                    }
                                    else
                                    {
                                        <p class="text-primary">نقدی</p>
                                    }
                                </td>
                                <td>
                                    <a asp-page="EditEpisode" asp-route-id="@item.EpisodeId"  class="btn btn-outline btn-primary">ویرایش</a>
                                    <a asp-page="DeleteEpisode" asp-route-id="@item.EpisodeId" class="btn btn-outline btn-danger">حذف</a>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="dataTables_paginate paging_simple_numbers" id="dataTables-example_paginate">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.table-responsive -->
        </div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
</div>
