@page "{Id}"
@model HamechiTamoom.Web.Pages.Admin.ManageGroups.DeleteGroupModel
@{
    ViewData["Title"] = "حذف گروه";
}

<div class="row">
    <div class="col-md-9">
        <h1 class="page-header text-danger">حذف گروه</h1>
        <h4>آیا از حذف این نقش مطمعن هستید ؟</h4>
    </div>
    <div class="col-md-3">
        <a asp-page="Index" class="btn btn-outline btn-primary">لیست گروه ها</a>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="row">
    <div class="col-md-7 m-2">
        <p class="alert alert-danger"> اگر قصد حذف گروه اصلی را دارید ابتدا زیر گروه های ان را کاملا حذف کنید </p>
    </div>
</div>


<div class="row">
    <div class="col-md-7">
        <div class="panel panel-danger">
            <div class="panel-heading">
                اطلاعات گروه
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="form-group">
                    <label>عنوان گروه</label>
                    <h3 class="text-danger"> @Model.CourseGroup.GroupTitle </h3>
                </div>
            </div>
            <!-- /.panel-body -->
        </div>
    </div>
    <form method="post">
        <input type="hidden" asp-for="CourseGroup.ParrentId" />
        <input type="hidden" asp-for="CourseGroup.GroupId" />
        <input type="hidden" asp-for="CourseGroup.GroupTitle" />
        <div class="col-md-7">
            <button type="submit" class="btn btn-danger btn-block">حذف گروه</button>
        </div>
    </form>
</div>
