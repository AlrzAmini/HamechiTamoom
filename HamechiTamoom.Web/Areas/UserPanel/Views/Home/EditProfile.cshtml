@model HamechiTamoom.Core.DTOs.EditUserProfileViewModel
@{
    ViewData["Title"] = "ویرایش پروفایل";
}

<div class="breadcrumbs_area">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="breadcrumb_content">
                    <ul>
                        <li><a href="/">خانه</a></li>
                        <li> پنل کاربری </li>
                        <li class="active"> ویرایش پروفایل </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<section class="main_content_area">
    <div class="container">
        <div class="row">
            <partial name="_SideBar" />
            <div class="col-md-9 border rounded shadow p-2">
                <div class="row">
                    <div class="col-sm-12 col-md-9 col-lg-9">
                        <div class="tab-content dashboard_content">
                            <div class="col-sm-12 col-md-9 col-lg-9">
                                <div class="tab-content dashboard_content">
                                    <div class="tab-pane fade active show" id="account-details">
                                        <h3 class="text-primary">ویرایش حساب </h3>
                                        <hr/>
                                        <div>
                                            <div>
                                                <div class="account_login_form">
                                                    <form asp-action="EditProfile" method="post" enctype="multipart/form-data">

                                                        @if (ViewBag.IsSuccess != null)
                                                        {
                                                            <div class="alert alert-success">
                                                                <p>پروفایل شما با موفقیت بروزرسانی شد</p>
                                                            </div>
                                                        }

                                                        <input type="hidden" asp-for="CurrentAvatar"/>
                                                        <br>
                                                        <label class="text-black-50"><i class="zmdi zmdi-account"></i> نام کاربری</label>
                                                        <input type="text" asp-for="UserName" class="rounded">
                                                        <span asp-validation-for="UserName"></span>
                                                        <br/>
                                                        <label class="text-black-50"><i class="zmdi zmdi-image"></i> تصویر پروفایل</label>
                                                        <input id="UserAvatar" type="file" asp-for="UserAvatar">
                                                        <span>لطفا فقط تصویر انتخاب کنید</span>
                                                        <img id="imgAvatar" src="/img/UserAvatar/@Model.CurrentAvatar" class="img-thumbnail"/>
                                                        <br>
                                                        <div>
                                                            <button class="bg-success" type="submit">ذخیره</button>
                                                        </div>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</section>
@section Scripts
{
    <script>
        function readURL(input) {

            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function(e) {
                    $('#imgAvatar').attr('src', e.target.result);
                }

                reader.readAsDataURL(input.files[0]);
            }
        }

        $("#UserAvatar").change(function() {
            readURL(this);
        });
    </script>
}
