@using HamechiTamoom.Core.Convertors
@model Tuple<List<HamechiTamoom.DataLayer.Entities.Course.AllCmnt>, int>
@{
    Layout = null;
}
@if (Model.Item1 != null)
{
    @foreach (var item in Model.Item1)
    {
    
        <div class="comment_content mb-2">
            <div class="row">
                <div class="team_thumb col-3 col-md-3 col-sm-12">
                    <img class="img-fluid mb-1" src="/img/UserAvatar/@item.User.UserAvatar" alt="@item.User.UserName">
                </div>
                <div class="col-9 col-md-9 col-sm-12">
                    <h5><a class="text-success">@item.User.UserName</a></h5>
                    <span>@item.CreateDate.ToShamsi()</span>
                    <p>@item.Comment</p>
                </div>
            </div>
        
            <div class="comment_reply">
                <a class="" href="">پاسخ</a>
            </div>
        </div>

    }

    <div class="pagination col-md-12 text-center container">
        <div class="col-md-3 col-sm-12"></div>
        <div class="col-md-9 col-sm-12 text-left">
            <ul>
                @for (int i = 1; i <=  Model.Item2; i++)
                {
                    <li class=""><a onclick="pageComment(@i)"><span>@i</span></a></li>
                }
            </ul>
        </div>
    </div>
}
else
{
    <div class="alert alert-info"> نظری ثبت نشده است . </div>
}


